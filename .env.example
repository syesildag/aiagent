# Node.js Environment Configuration

# Application
NODE_ENV=development
PORT=3000
HOST=localhost
SERVER_TERMINATE_TIMEOUT=5000

# Database Configuration
DB_USER=your_db_user
DB_HOST=localhost
DB_NAME=your_database_name
DB_PASSWORD=your_db_password
DB_PORT=5432

# LLM Configuration
LLM_PROVIDER=ollama
LLM_MODEL=qwen3:4b

# Ollama Configuration
OLLAMA_HOST=http://localhost:11434

# OpenAI Configuration (when LLM_PROVIDER=openai)
OPENAI_API_KEY=your_openai_api_key
OPENAI_BASE_URL=https://api.openai.com

# GitHub Copilot Configuration (when LLM_PROVIDER=github)
GITHUB_OAUTH_APP_CLIENT_ID=your_github_oauth_client_id
GITHUB_OAUTH_APP_CLIENT_SECRET=your_github_oauth_client_secret
GITHUB_TOKEN=your_github_token
GITHUB_COPILOT_BASE_URL=https://models.inference.ai.azure.com
#GITHUB_COPILOT_BASE_URL=https://api.githubcopilot.com

# External APIs
OPENWEATHERMAP_API_KEY=your_openweathermap_api_key

# MCP Configuration
MCP_SERVERS_PATH=./mcp-servers.json
MAX_LLM_ITERATIONS=2