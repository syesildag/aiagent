{
  "mcp": {
    "file-system": {
      "type": "local",
      "command": ["node", "/path/to/mcp-servers/filesystem/index.js"],
      "environment": {
        "NODE_ENV": "production"
      },
      "enabled": false
    },
    "github-api": {
      "type": "remote",
      "url": "https://api.github.com/mcp",
      "headers": {
        "Authorization": "Bearer github_pat_your_token_here",
        "Accept": "application/vnd.github.v3+json"
      },
      "enabled": false
    },
    "calendar-service": {
      "type": "local",
      "command": ["python", "/path/to/calendar_mcp_server.py"],
      "environment": {
        "PYTHONPATH": "/path/to/calendar/lib",
        "CALENDAR_API_KEY": "your_calendar_api_key"
      },
      "enabled": false
    },
    "web-search": {
      "type": "remote",
      "url": "https://search-api.example.com/mcp",
      "headers": {
        "X-API-Key": "your_search_api_key"
      },
      "enabled": false
    }
  }
}